.ico
	display inline-block
	width  40px
	height 40px
	vertical-align bottom
	text-align left
	text-indent -999px
	background url( @spriteIcos ) no-repeat 0 0
	overflow hidden
	&.close
		background-position  -252px -177px
		width 16px
		height  7px


